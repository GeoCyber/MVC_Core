        <!-- ============================================================== -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <form class="form-horizontal" asp-action="Create">
                        <div class="card-body">
                            <h4 class="card-title">Create Roles Permission</h4>
                            <div class="form-group row">
                                <label for="parentMenu" class="col-md-2 m-t-15">Roles</label>
                                <div class="col-sm-9">
                                    <select class="select2 form-control custom-select" style="width: 100%; height:36px;" asp-for="RoleId" asp-items="ViewBag.roles" id="roles">
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="parentMenu" class="col-md-2 m-t-15">Module</label>
                                <div class="col-sm-9">
                                    <select class="select2 form-control custom-select" style="width: 100%; height:36px;" asp-for="NavigationMenuId" asp-items="ViewBag.NavigationMenuId" id="module">
                                    </select>
                                </div>
                            </div>
                            <div class="border-top">
                                <div class="card-body">
                                    <input type="submit" class="btn btn-success" value="Create">
                                    <input type="submit" class="btn btn-primary mdi mdi-subdirectory-arrow-left" value="Back to List" asp-controller="Roles" asp-action="Index">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
