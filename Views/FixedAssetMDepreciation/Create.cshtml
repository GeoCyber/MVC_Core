@model FixedModules.Models.FixedAssetMDepreciation

@{ ViewData["Title"] = "Department-Create";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/css/DropButton.css" rel="stylesheet" />
<style>
    .lcss {
        position: absolute;
        top: 0;
        right: 0;
        margin-right: 15px;
        height: 40px;
    }
    .select2-container {
        box-sizing: border-box;
        display: inline-block;
        margin: 0;
        position: relative;
        vertical-align: middle;
    }
    .input-group-append {
        margin-left: -1px;
        position: relative;
        top: -39px;
    }
    .hdcd {
        background: #007bff;
    }
        .hdcd h1 {
            font-size: 14px;
            color: #fff;
            margin: 0;
            padding: 0;
        }

    .link {
        background: #007bff;
        text-align: right;
        padding-right: 8px;
        margin-bottom: 5px;
    }

        .link i {
            background: #60a9f7;
            width: 20px;
            text-align: center;
            color: #fff;
            font-size: 12px;
            height: 20px;
            top: 0px;
            line-height: 20px;
            margin-bottom: 4px;
        }

        .link span {
            color: #fff;
            text-align: left;
            float: left;
            padding-left: 10px;
        }

