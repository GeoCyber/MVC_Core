@model FixedModules.Models.SupplierAdd

@{
    ViewData["Title"] = "Supplier-Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>

<div class="content-i">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header">
                Create Supplier
            </h6>
            <div class="element-box">
                <div class="row">
                    <a asp-action="Index"><input class="box btn-secondary" style="border-radius:5px; cursor:pointer; margin-left:1%" type="button" value="Back" /></a>
                </div>
                <div class="card-body z-depth-1">
                    <div class="detailContainer" style="margin: 0 auto;padding: 0 20px;margin-bottom: 10px;">
                        @if (!Html.ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger" role="alert" asp-validation-summary="All"></div>
                        }
                        <form asp-action="Create" method="post">
                            <div class="row">
                                <legend><span><b>Info</b></span></legend>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Code<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>
                                    <input asp-for="Code" class="form-control" required />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Name<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>
                                    <input asp-for="Name" class="form-control" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Chart Of Account<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>
                                    <select class="form-control" id="ChartOfAccount" asp-for="ChartOfAccount" asp-items="ViewBag.COAList"></select>
                                    <span asp-validation-for="ChartOfAccount" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-12">
                                    <label class="col-sm-12 control-label col-form-label">Remark</label>
                                    <input asp-for="Remark" class="form-control" />
                                    <span asp-validation-for="Remark" class="text-danger"></span>
                                </div>
                                <div class="col-sm-12">
                                    <center>
                                        <label>Active</label>
                                        <input checked="checked" data-val="true" data-val-required="The Active field is required." id="Active" type="checkbox">
                                        <input id="status" name="Status" type="hidden" value="true">
                                    </center>
                                </div>

                                <legend><span><b>Contact</b></span></legend>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Registration Number</label>
                                    <input asp-for="RegistrationNumber" class="form-control" />
                                    <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Contact Person</label>
                                    <input asp-for="ContactPerson" class="form-control" />
                                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-12">
                                    <label class="col-sm-12 control-label col-form-label">Address</label>
                                    <input asp-for="Address1" class="form-control" style="margin-bottom:5px" />
                                    <span asp-validation-for="Address1" class="text-danger"></span>
                                    <input asp-for="Address2" class="form-control" style="margin-bottom:5px" />
                                    <span asp-validation-for="Address2" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Postcode</label>
                                    <input asp-for="PostCode" class="form-control" required />
                                    <span asp-validation-for="PostCode" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">City</label>
                                    <input asp-for="City" class="form-control" required />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">State</label>
                                    <select class="form-control" id="State" asp-for="State" asp-items="ViewBag.stateList"></select>
                                    <span asp-validation-for="State" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Country</label>
                                    <select class="form-control" id="Country" asp-for="Country" asp-items="ViewBag.countryList"></select>
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Phone</label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Fax</label>
                                    <input asp-for="Fax" class="form-control" />
                                    <span asp-validation-for="Fax" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Email<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>
                                    <input asp-for="Email" type="email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">WebSite<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>
                                    <input asp-for="Website" class="form-control" required />
                                    <span asp-validation-for="Website" class="text-danger"></span>
                                </div>

                                <legend><span><b>Tax</b></span></legend>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Tax Code</label>
                                    <select class="form-control" id="TaxCode" asp-for="TaxCode" asp-items="ViewBag.TaxList"></select>
                                    <span asp-validation-for="TaxCode" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Tax Number</label>
                                    <input asp-for="TaxNumber" class="form-control" />
                                    <span asp-validation-for="TaxNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Tax Expiry</label>
                                    <input asp-for="TaxExpiryDate" class="form-control" data-provide="datepicker" />
                                    <span asp-validation-for="TaxExpiryDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="clearfix"></div>

                            <div class="btn-container text-center">
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary btn-fix-width" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

