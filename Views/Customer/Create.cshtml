@model FixedAssets.Models.Customer

@{
    ViewData["Title"] = "Create";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>

<div class="content-i" onload="loadfunc()">
    <div class="content-box">
        <div class="element-wrapper">
            <h6 class="element-header">
                Create Customer
            </h6>
            <div class="element-box">
                <div class="row">
                    <a asp-action="Index"><input class="box btn-secondary" style="border-radius:5px; cursor:pointer; margin-left:1%" type="button" value="Back" /></a>
                </div>
                <div class="card-body z-depth-1">
                    <div class="detailContainer" style="margin: 0 auto;padding: 0 20px;margin-bottom: 10px;">

                        <form asp-action="Create" method="post">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Code<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>
                                    <input asp-for="Code" class="form-control" />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Name<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>

                                    <input asp-for="Name" class="form-control" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Chart Of Account<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>

                                    <select class="fstdropdown-select" id="ChartOfAccount" asp-for="ChartOfAccount" asp-items="ViewBag.coa">
                                    </select>
                                    <span asp-validation-for="ChartOfAccount" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-12 control-label col-form-label">Remark<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>

                                        <input asp-for="Remark" class="form-control" required />
                                        <span asp-validation-for="Remark" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <center>
                                        <label>Active</label>
                                        <input checked="checked" data-val="true" data-val-required="The Active field is required." id="Active" type="checkbox">
                                        <input id="status" name="Status" type="hidden" value="true">
                                    </center>

                                </div>

                                <legend><span>Contact</span></legend>

                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Registration Number<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>

                                    <input asp-for="RegistrationNo" class="form-control" />
                                    <span asp-validation-for="RegistrationNo" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Contact Person<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>

                                    <input asp-for="ContactPerson" class="form-control" />
                                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                                </div>


                                <div class="form-group col-sm-12">
                                    <label class="col-sm-12 control-label col-form-label">Address<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>
                                    <input asp-for="Address" class="form-control" style="margin-bottom:5px" required />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">City<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>
                                    <input asp-for="City" class="form-control" required />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Postcode<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>

                                    <input asp-for="PostCode" class="form-control" required />
                                    <span asp-validation-for="PostCode" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Country<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>

                                    <select class="fstdropdown-select" id="Country" asp-for="Country" asp-items="ViewBag.countryList">
                                    </select>
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">State<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>
                                    <select class="fstdropdown-select" id="State" asp-for="State" asp-items="ViewBag.stateList">
                                    </select>
                                    <span asp-validation-for="State" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label asp-for="PhoneNumber" class="control-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label asp-for="Fax" class="control-label"></label>
                                    <input asp-for="Fax" class="form-control" />
                                    <span asp-validation-for="Fax" class="text-danger"></span>
                                </div>

                                <div class="form-group col-sm-12">
                                    <label class="col-sm-12 control-label col-form-label">Email<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>

                                    <input asp-for="Email" type="email" class="form-control" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-12">
                                    <label class="col-sm-12 control-label col-form-label">Website<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>

                                    <input asp-for="Website" type="text" class="form-control" required />
                                    <span asp-validation-for="Website" class="text-danger"></span>
                                </div>
                            </div>
                            <legend><span>Tax</span></legend>
                            <div class="form-group col-sm-12">
                                <label class="col-sm-12 control-label col-form-label">Tax Code<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>
                                <select class="fstdropdown-select" id="TaxCode" asp-for="TaxCode" asp-items="ViewBag.TaxCode">
                                </select>
                                <span asp-validation-for="TaxCode" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Tax Number<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>

                                    <input asp-for="TaxNumber" type="text" class="form-control" required />
                                    <span asp-validation-for="TaxNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Tax Expiry<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>
                                    <div class="date-input">
                                        <input class="form-control" placeholder="Tax Expiry" type="datetime-local">
                                    </div>
                                    <span asp-validation-for="TaxExpiry" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="clearfix"></div>

                            <div class="btn-container text-center">
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary btn-fix-width" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    $(document).ready(function () {
        console.log($('#Country').val());
               // Dropdown list change event.
        $('#Country').change(function () {
            $('#State option').remove();
            $.getJSON('/Customer/GetStates', { intCatID: $('#Country').val() }, function (data) {
                $.each(data, function () {
                    $('#State').append('<option value=' +
                        this.StateId + '>' + this.StateName + '</option>');
                });
            }).fail(function (jqXHR, textStatus, errorThrown) {
                alert('Error getting products!');
            });
        });
    });
        
        
    });

   
         

    function myFunction() {
        document.getElementById("myDropdown").classList.toggle("show");
       
    };

    function filterFunction() {
        var input, filter, ul, li, a, i;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        div
            = document.getElementById("myDropdown");
        a = div.getElementsByTagName("a");
        for (i = 0; i <
            a.length; i++) {
            txtValue = a[i].textContent || a[i].innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                a[i].style.display = "";
            } else {
                a[i].style.display = "none";
            }
        }
    };



    $(".select2").select2();



</script>




