     function HideTextBox(ddlId)
        {
             var ControlName = document.getElementById("Country");
           
             if(ControlName.value == "Malaysia") 
             {
                 document.getElementById('tinNo').style.display = 'none';
                 document.getElementById('gst').style.display = 'block';

              
             }
             else
             {
                  document.getElementById('tinNo').style.display = 'block';
                 document.getElementById('gst').style.display = 'none';
               
             }
        }
    </script>
}
