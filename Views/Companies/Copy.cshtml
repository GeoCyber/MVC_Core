                                    <span asp-validation-for="PostCode" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">Country<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>

                                    <select class="select2 form-control custom-select" asp-for="Country" asp-items="ViewBag.countryList" id="Country" onchange="HideTextBox(this);">
                                    </select>
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-12 control-label col-form-label">State<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>

                                    <select class="select2 form-control custom-select" id="State" asp-for="State" asp-items="ViewBag.stateList">
                                    </select>
                                    <span asp-validation-for="State" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-12">
                                    <label class="col-sm-12 control-label col-form-label">Email<span class="value-mandatory"><i class="mdi mdi-value"></i></span></label>

                                    <input asp-for="Email" type="email" class="form-control" value="@Model.Email" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label asp-for="PhoneNumber" class="control-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label asp-for="Fax" class="control-label"></label>
                                    <input asp-for="Fax" class="form-control" value="@Model.Fax" />
                                    <span asp-validation-for="Fax" class="text-danger"></span>
                                </div>
